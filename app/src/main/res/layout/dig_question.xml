<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorDialogBackground">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/logoblue"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txtQuestionTitle"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="질의"
                android:textColor="@color/colorDialogTitleText"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgQuestionClose"
                android:layout_width="23dp"
                android:layout_height="29dp" />

        </LinearLayout>

        <!-- contents -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtQuestionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="12dp"
                android:textColor="@color/colorDialogContentText"
                android:text="알림내용"/>

        </LinearLayout>

        <!-- buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnQuestionOk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/logoblue"
                android:text="확인"
                android:textColor="@color/colorDialogButtonText" />

            <Button
                android:id="@+id/btnQuestionCancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/reject"
                android:text="취소"
                android:textColor="@color/colorDialogButtonText" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>